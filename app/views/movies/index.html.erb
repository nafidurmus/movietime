<h1>Listing movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rating</th>
    <th>Votes</th>
    <th>Length</th>
    <th>Trailer url</th>
    <th>Plot</th>
    <th>Plot synopsis</th>
    <th>Plot summary</th>
    <th>Poster url</th>
    <th>Tagline</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.rating %></td>
    <td><%= movie.votes %></td>
    <td><%= movie.length %></td>
    <td><%= movie.trailer_url %></td>
    <td><%= movie.plot %></td>
    <td><%= movie.plot_synopsis %></td>
    <td><%= movie.plot_summary %></td>
    <td><%= movie.poster_url %></td>
    <td><%= movie.tagline %></td>
    <td><%= movie.year %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

