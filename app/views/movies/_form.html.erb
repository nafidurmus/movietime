<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :rating %>
    <%= f.input :votes %>
    <%= f.input :length %>
    <%= f.input :trailer_url %>
    <%= f.input :plot %>
    <%= f.input :plot_synopsis %>
    <%= f.input :plot_summary %>
    <%= f.input :poster_url %>
    <%= f.input :tagline %>
    <%= f.input :year %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
